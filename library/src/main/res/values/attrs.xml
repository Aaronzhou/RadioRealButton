<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="backgroundColor" format="color"/>

    <declare-styleable name="RadioRealButton">

        <attr name="android:enabled"/>
        <attr name="android:clickable"/>

        <attr name="android:padding"/>
        <attr name="android:paddingLeft"/>
        <attr name="android:paddingRight"/>
        <attr name="android:paddingTop"/>
        <attr name="android:paddingBottom"/>

        <attr name="android:background"/>

        <attr name="backgroundColor"/>

        <attr name="ripple" format="boolean"/>
        <attr name="rippleColor" format="color"/>

        <attr name="text" format="string"/>
        <attr name="textColor" format="color"/>
        <attr name="textSize" format="dimension"/>
        <attr name="textStyle" format="integer">
            <flag name="normal" value="0"/>
            <flag name="bold" value="1"/>
            <flag name="italic" value="2"/>
        </attr>
        <attr name="textTypeface" format="string"/>

        <attr name="drawable" format="reference"/>
        <attr name="drawablePadding" format="dimension"/>
        <attr name="drawableTint" format="color"/>
        <attr name="drawableWidth" format="dimension"/>
        <attr name="drawableHeight" format="dimension"/>
        <attr name="drawableGravity" format="integer">
            <flag name="left" value="0"/>
            <flag name="top" value="1"/>
            <flag name="right" value="2"/>
            <flag name="bottom" value="3"/>
        </attr>
        <attr name="textGravity" format="integer">
            <flag name="left" value="0"/>
            <flag name="center" value="1"/>
            <flag name="right" value="2"/>
        </attr>

        <attr name="checked" format="boolean"/>
        <attr name="textFillSpace" format="boolean"/>

    </declare-styleable>

    <declare-styleable name="RadioRealButtonGroup">

        <attr name="android:enabled"/>
        <attr name="android:clickable"/>

        <attr name="android:padding"/>
        <attr name="android:paddingLeft"/>
        <attr name="android:paddingTop"/>
        <attr name="android:paddingRight"/>
        <attr name="android:paddingBottom"/>

        <attr name="android:layout_margin"/>
        <attr name="android:layout_marginLeft"/>
        <attr name="android:layout_marginTop"/>
        <attr name="android:layout_marginRight"/>
        <attr name="android:layout_marginBottom"/>

        <attr name="buttonsPadding" format="dimension"/>
        <attr name="buttonsPaddingLeft" format="dimension"/>
        <attr name="buttonsPaddingRight" format="dimension"/>
        <attr name="buttonsPaddingTop" format="dimension"/>
        <attr name="buttonsPaddingBottom" format="dimension"/>

        <attr name="backgroundColor"/>

        <attr name="enableDeselection" format="boolean"/>

        <attr name="borderSize" format="dimension"/>
        <attr name="borderColor" format="color"/>

        <attr name="dividerSize" format="dimension"/>
        <attr name="dividerPadding" format="dimension"/>
        <attr name="dividerColor" format="color"/>
        <attr name="dividerRadius" format="dimension"/>
        <attr name="dividerBackgroundColor" format="color"/>

        <attr name="selectorDividerSize" format="dimension"/>
        <attr name="selectorDividerPadding" format="dimension"/>
        <attr name="selectorDividerColor" format="color"/>
        <attr name="selectorDividerRadius" format="dimension"/>

        <attr name="bottomLineColor" format="color"/>
        <attr name="bottomLineSize" format="dimension"/>
        <attr name="bottomLineBringToFront" format="boolean"/>
        <attr name="bottomLineRadius" format="dimension"/>

        <attr name="selectorTop" format="boolean"/>
        <attr name="selectorBottom" format="boolean"/>

        <attr name="selectorColor" format="color"/>
        <attr name="selectorSize" format="dimension"/>
        <attr name="selectorBringToFront" format="boolean"/>
        <attr name="selectorAboveOfBottomLine" format="boolean"/>
        <attr name="selectorRadius" format="dimension"/>

        <attr name="checkedPosition" format="integer"/>
        <attr name="checkedButton" format="reference"/>

        <attr name="selectorAnimationType">
            <flag name="translate_x" value="0"/>
            <flag name="translate_y" value="1"/>
            <flag name="scale_x" value="2"/>
            <flag name="scale_y" value="3"/>
            <flag name="alpha" value="4"/>
        </attr>

        <attr name="animate" format="boolean"/>

        <attr name="animateSelectorDelay" format="integer"/>
        <attr name="animateSelectorDuration" format="integer"/>
        <attr name="animateSelector" format="integer">
            <flag name="fastOutSlowIn" value="0"/>
            <flag name="bounce" value="1"/>
            <flag name="linear" value="2"/>
            <flag name="decelerate" value="3"/>
            <flag name="cycle" value="4"/>
            <flag name="anticipate" value="5"/>
            <flag name="accelerateDecelerate" value="6"/>
            <flag name="accelerate" value="7"/>
            <flag name="anticipateOvershoot" value="8"/>
            <flag name="fastOutLinearIn" value="9"/>
            <flag name="linearOutSlowIn" value="10"/>
            <flag name="overshoot" value="11"/>
        </attr>

        <attr name="radius" format="dimension"/>

        <attr name="animateImagesScale" format="float"/>
        <attr name="animateImages_enterDuration" format="integer"/>
        <attr name="animateImages_enter" format="integer">
            <flag name="fastOutSlowIn" value="0"/>
            <flag name="bounce" value="1"/>
            <flag name="linear" value="2"/>
            <flag name="decelerate" value="3"/>
            <flag name="cycle" value="4"/>
            <flag name="anticipate" value="5"/>
            <flag name="accelerateDecelerate" value="6"/>
            <flag name="accelerate" value="7"/>
            <flag name="anticipateOvershoot" value="8"/>
            <flag name="fastOutLinearIn" value="9"/>
            <flag name="linearOutSlowIn" value="10"/>
            <flag name="overshoot" value="11"/>
        </attr>
        <attr name="animateImages_exitDuration" format="integer"/>
        <attr name="animateImages_exit" format="integer">
            <flag name="fastOutSlowIn" value="0"/>
            <flag name="bounce" value="1"/>
            <flag name="linear" value="2"/>
            <flag name="decelerate" value="3"/>
            <flag name="cycle" value="4"/>
            <flag name="anticipate" value="5"/>
            <flag name="accelerateDecelerate" value="6"/>
            <flag name="accelerate" value="7"/>
            <flag name="anticipateOvershoot" value="8"/>
            <flag name="fastOutLinearIn" value="9"/>
            <flag name="linearOutSlowIn" value="10"/>
            <flag name="overshoot" value="11"/>
        </attr>

        <attr name="animateTextsScale" format="float"/>
        <attr name="animateTexts_enterDuration" format="integer"/>
        <attr name="animateTexts_enter" format="integer">
            <flag name="fastOutSlowIn" value="0"/>
            <flag name="bounce" value="1"/>
            <flag name="linear" value="2"/>
            <flag name="decelerate" value="3"/>
            <flag name="cycle" value="4"/>
            <flag name="anticipate" value="5"/>
            <flag name="accelerateDecelerate" value="6"/>
            <flag name="accelerate" value="7"/>
            <flag name="anticipateOvershoot" value="8"/>
            <flag name="fastOutLinearIn" value="9"/>
            <flag name="linearOutSlowIn" value="10"/>
            <flag name="overshoot" value="11"/>
        </attr>
        <attr name="animateTexts_exitDuration" format="integer"/>
        <attr name="animateTexts_exit" format="integer">
            <flag name="fastOutSlowIn" value="0"/>
            <flag name="bounce" value="1"/>
            <flag name="linear" value="2"/>
            <flag name="decelerate" value="3"/>
            <flag name="cycle" value="4"/>
            <flag name="anticipate" value="5"/>
            <flag name="accelerateDecelerate" value="6"/>
            <flag name="accelerate" value="7"/>
            <flag name="anticipateOvershoot" value="8"/>
            <flag name="fastOutLinearIn" value="9"/>
            <flag name="linearOutSlowIn" value="10"/>
            <flag name="overshoot" value="11"/>
        </attr>
    </declare-styleable>

</resources>